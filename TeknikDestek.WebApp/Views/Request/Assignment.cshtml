@using TeknikDestek.WebApp

@model TeknikDestek.Entities.Request
@{
    ViewBag.Title = "Assignment";
}

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Kullanıcı</h4>
                <hr />
                @Html.ValidationSummary(false)

                <div class="form-group">
                    @Html.LabelFor(model => model.SupportersId, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.SupportersId, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-8">
                            @Bootstrap.Button("success", string.Empty, "submit", "plus", "Kaydet")
                            @Bootstrap.LinkButton("/Request/Index", "default", string.Empty, string.Empty, "arrow-left", " Geri Dön!")
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>



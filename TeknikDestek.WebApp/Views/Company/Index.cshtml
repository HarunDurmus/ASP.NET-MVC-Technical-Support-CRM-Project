@using TeknikDestek.WebApp
@model IEnumerable<TeknikDestek.Entities.Company>
@{
    ViewBag.Title = "Index";
}


<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <br />
        <p>
            @Bootstrap.LinkButton("/Category/Create", "primary", string.Empty, string.Empty, "plus", " Yeni")
        </p>
        <table class="table">
            <tr>
                
                <th>
                    @Html.DisplayNameFor(model => model.phoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Location)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.email)
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    
                    <th>
                        @Html.DisplayFor(modelItem => item.phoneNumber)
                    </th>
                    <th>
                        @Html.DisplayFor(modelItem => item.LocationId)
                    </th>
                    <th>
                        @Html.DisplayFor(modelItem => item.email)
                    </th>
                    <td>
                        @Bootstrap.LinkButton("/Company/Edit/" + item.Id, "warning", "btn-xs", "Düzenle", "edit", string.Empty)
                        @Bootstrap.LinkButton("/Company/Details/" + item.Id, "info", "btn-xs", "Detaylar", "search", string.Empty)
                        @Bootstrap.LinkButton("/Company/Delete/" + item.Id, "danger", "btn-xs", "Kaldır", "trash", string.Empty)
                    </td>
                </tr>
            }
        </table>
    </div>
</div>